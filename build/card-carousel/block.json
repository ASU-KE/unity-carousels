{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "unity-carousels/card-carousel",
  "version": "1.0.0",
  "title": "Card Carousel",
  "category": "unity-carousels",
  "icon": "images-alt",
  "description": "Carousel build off of the card component, to group related content together when all content isn't critical for the viewer to see all content options at once.",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "unity-carousels",
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "attributes": {
    "perView": {
      "type": "string",
      "default": "2"
    },
    "cardItems": {
      "type": "array",
      "default": []
    },
    "maxWidth": {
      "type": "string",
      "default": "1200px"
    },
    "cardHorizontal": {
      "type": "boolean",
      "default": false
    }
  },
  "example": {
    "attributes": {
      "perView": {
        "type": "string",
        "default": "2"
      },
      "cardItems": {
        "type": "array",
        "default": []
      },
      "maxWidth": {
        "type": "string",
        "default": "500px"
      }
    }
  }
}