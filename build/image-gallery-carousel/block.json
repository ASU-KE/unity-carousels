{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "unity-carousels/image-gallery-carousel",
  "version": "1.1.0",
  "title": "Image Gallery Carousel",
  "category": "unity-carousels",
  "icon": "format-gallery",
  "description": "Image gallery carousel.",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "unity-carousels",
  "viewScript": "file:./view.js",
  "editorScript": "file:./index.js",
  "attributes": {
    "perView": {
      "type": "string",
      "default": "2"
    },
    "imageItems": {
      "type": "array",
      "default": []
    },
    "maxWidth": {
      "type": "string",
      "default": "1200px"
    },
    "imageAutoSize": {
      "type": "boolean",
      "default": true
    },
    "hasContent": {
      "type": "boolean",
      "default": true
    }
  }
}